{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
  

    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug start script",
      "program": "${workspaceFolder}/scripts/start.js",
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug backend",
      "program": "${workspaceFolder}/scripts/start.js",
      "args": ["backend --no-db"],
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug setup",
      "program": "${workspaceFolder}/scripts/setup.js",
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug handlebars",
      "program": "${workspaceFolder}/scripts/generate_routes.js",
      "autoAttachChildProcesses": true
    }
  ]
}
